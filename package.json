{
  "name": "verifyapi",
  "version": "1.0.0",
  "description": "Professional desktop API testing tool inspired by Postman",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev-react\" \"npm run dev-electron\"",
    "dev-react": "vite",
    "dev-electron": "tsc -p electron/tsconfig.json && electron dist/electron/main.js",
    "build": "npm run build-react && npm run build-electron",
    "build-react": "vite build",
    "build-electron": "tsc -p electron/tsconfig.json",
    "package": "npm run build && electron-builder",
    "test": "jest",
    "test:seed": "node test-seed-data.js",
    "test:login": "node test-login-profiles.js",
    "diagnose": "node diagnose-database.js",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "api",
    "testing",
    "postman",
    "electron",
    "desktop",
    "typescript",
    "react"
  ],
  "author": "dotnetappdev",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "@monaco-editor/react": "^4.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "allotment": "^1.20.4",
    "axios": "^1.4.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "exceljs": "^4.3.0",
    "fast-xml-parser": "^5.2.5",
    "node-soap": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.dotnetappdev.verifyapi",
    "productName": "Palis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
